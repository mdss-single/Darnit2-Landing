/*  <fonts>  */
@font-face
	font-family 'Franklin Gothic Book'
	src url('../fonts/FranklinGothic-Book.woff2') format('woff2'), url('../fonts/FranklinGothic-Book.woff') format('woff')
	font-weight normal
	font-style normal
/*  </fonts>  */

/*  <vars>  */
$font = 'Franklin Gothic Book';
$colorText = #001b35;
$tablet = 'screen and (max-width:769px)';
$phone = 'screen and (max-width:380px)';
/*  </vars>  */

/*  <general>  */
html
	font-size 62.5%
	cursor default
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	-webkit-tap-highlight-color #000
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
body
	display flex
	flex-direction column
	min-height 100vh
	color $colorText
	font normal 1.4rem/1.6 $font
	background #fff url('../i/bg.jpg') no-repeat 0 0 / cover
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color #5769A3
	font inherit
	text-decoration none
	transition all .2s
	&:hover
		text-decoration underline
img
	max-width 100%
.main
	flex 1
.no-scroll
	overflow hidden
/*  </general>  */

/*  <header>  */
.header
	flex-shrink 0
	padding 16px 0
	.container
		display flex
		justify-content space-between
		align-items center
	&__menu
		position relative
		width 33px
		height 25px
		&::before
		&::after
			position absolute
			right 0
			left 0
			height 4px
			background-color #f24941
			border-radius 3px
			content ''
		&::before
			top 0
		&::after
			top 50%
			transform translateY(-50%)
		span
			position absolute
			right 0
			bottom 0
			width 22px
			height 4px
			background-color #f24941
			border-radius 3px
			transition all .2s
		a:hover&
			span
				width 100%
/*  </header>  */

/*  <nav>  */
.nav
	position fixed
	top 0
	right 0
	bottom 0
	z-index 9999
	overflow-y auto
	width 418px
	background rgba(#fff, .7) url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAEAQMAAACTPww9AAAABlBMVEX///////9VfPVsAAAAAXRSTlOzEo46UAAAAA5JREFUCNdjWMAgAMQOAAbYAZE1p3R9AAAAAElFTkSuQmCC')
	transform translateX(100%)
	@media $tablet
		width 380px
	@media $phone
		width 90%
	&--active
		animation showMenu 1s
		transform translateX(0)
	&--hide
		animation hideMenu 1s
		transform translateX(0)
	&__cover
		animation fadeIn .5s
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		z-index 9998
		background-color rgba(#000, .38)
	&-wrap
		display flex
		flex-direction column
		justify-content flex-start
		height 100%
		padding 155px 130px 0 70px
		@media $tablet
			padding 100px 100px 0 60px
		@media $phone
			padding 70px 70px 0 60px
	&-main
		display flex
		flex-direction column
		&__item
			align-self flex-start
			color $colorText
			font-size 2.4rem
			margin 10px 0
			a:hover&
				color #f24941
				text-decoration none
			&--active
				position relative
				color #f24941
				&::before
					position absolute
					top 50%
					left -22px
					width 8px
					height @width
					background-color @color
					border-radius 50%
					content ''
					transform translateY(-50%)
	&-phone
		align-self flex-start
		color #f24941
		font-weight bold
		font-size 1.8rem
		margin 20px 0
		a:hover&
			text-decoration none
	&-address
		color #58717d
		font-style normal
		font-size 1.4rem
		line-height 1.8rem
	&-copyright
		flex 1
		display flex
		flex-direction column
		justify-content flex-end
		margin 85px 0
/*  </nav>  */

/*  <homepage>  */
.homepage
	max-width 600px
	margin 120px 0
	&__asphalting
		color #1e0e00
		font-size 1.8rem
		margin 0 0 45px 30px
		span
			color #be0d1b
	&__title
		font-size 6rem
		line-height 1.3
	&__notice
		font-size 1.8rem
		margin 20px 0 80px
	&__details
		display flex
		align-items center
		&-more
			display flex
			justify-content center
			align-items center
			height 46px
			color #fff
			font-size 1.8rem
			background-color $colorText
			border-radius 4px
			padding 0 36px
			margin-right 14px
			a:hover&
				text-decoration none
				background-color lighten($colorText, 10)
		&-view
			color $colorText
			font-size 1.8rem
			a:hover&
				text-decoration none
			&::after
				animation slide 1s infinite
				font-family 'Sans-serif'
				margin-left 5px
				content '\2192'
/*  </homepage>  */

/*  <modal>  */
.modal
	display none
	position relative
	max-width 1200px
	background-repeat no-repeat
	background-size cover
	border 3px solid #fff
	border-radius 8px
	&::before
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 3
		background-color rgba(#fff, .7)
		content ''
		pointer-events none
	&-header
	&-content
	&-footer
		position relative
		z-index 4
	&.fancybox-content
		padding 40px 45px 24px
	.fancybox-close-small
		display none
	&__close
		position absolute
		top 16px
		right 24px
		z-index 5
		width 49px
		height @width
		background-color #f24941
		border-radius 50%
		a:hover&
			background-color darken(#f24941, 10)
		&::before
		&::after
			position absolute
			top 50%
			left 25px
			width 40px
			height 4px
			background-color #fff
			border-radius 4px
			margin-top -2px
			margin-left -21px
			content ''
			pointer-events none
		&::before
			transform rotate(45deg)
		&::after
			transform rotate(-45deg)
	&-header
		display flex
		align-items center
		@media $tablet
			flex-direction column
			align-items flex-start
		&__logo
			flex-shrink 0
			margin-right 35px
			@media $tablet
				margin-right 0
				margin-bottom 15px
			img
				vertical-align top
		&__info
			width 200px
			&-phone
				color #f24941
				font-weight bold
				font-size 1.8rem
				line-height 1
				a:hover&
					text-decoration none
			&-address
				color #58717d
				font-style normal
				line-height 1
				margin-top 10px
	&-content
		margin 200px 0
		@media $tablet
			margin 30px 0
		&__title
			font-size 3rem
			text-decoration underline
		&__text
			font-size 1.8rem
	&-footer
		text-align center
		@media $tablet
			display flex
			flex-wrap wrap
			justify-content space-between
		&__link
			color $colorText
			text-transform uppercase
			text-decoration underline
			margin 0 20px
			@media $tablet
				width 40%
				margin 5px 0
			a:hover&
				text-decoration none
.fancybox-is-open .fancybox-bg
	opacity .1
/*  </modal>  */

/*  <animation>  */
@keyframes showMenu
	0%
		transform perspective(400px) rotate3d(0, 1, 0, 90deg)
		transition-timing-function ease-in
		opacity 0
	40%
		transform perspective(400px) rotate3d(0, 1, 0, -20deg)
		transition-timing-function ease-in
	60%
		transform perspective(400px) rotate3d(0, 1, 0, 10deg)
		opacity 1
	80%
		transform perspective(400px) rotate3d(0, 1, 0, -5deg)
	100%
		transform perspective(400px)
@keyframes hideMenu
	0%
		transform perspective(400px)
	30%
		transform perspective(400px) rotate3d(0, 1, 0, -15deg)
		opacity 1
	100%
		transform perspective(400px) rotate3d(0, 1, 0, 90deg)
		opacity 0
@keyframes fadeIn
	from
		opacity 0
	to
		opacity 1
@keyframes slide
	from
		transform translateX(0)
	50%
		transform translateX(4px)
	to
		transform translateX(0)
/*  </animation>  */